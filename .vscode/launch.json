    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "processId": "${command:PickProcess}"
        }
    ]
}