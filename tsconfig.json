{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "build",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitOnError": false
  },
  "compileOnSave": true,
  "include": ["src"]
}
